<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
        http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
version="2.5">
    <security-constraint>
		  <web-resource-collection>
		    <web-resource-name>Admin</web-resource-name>
		    <url-pattern>/actions/admin/*</url-pattern>
		  </web-resource-collection>
		  <web-resource-collection>
		    <web-resource-name>AdminHome</web-resource-name>
		    <url-pattern>/menu/adminmenu.jsp</url-pattern>
		  </web-resource-collection>
		  <auth-constraint>
		    <role-name>admin</role-name>
		  </auth-constraint>
	</security-constraint>
    <security-constraint>
		  <web-resource-collection>
		    <web-resource-name>User</web-resource-name>
		    <url-pattern>/actions/user/*</url-pattern>
		  </web-resource-collection>
		  <web-resource-collection>
		    <web-resource-name>UserHome</web-resource-name>
		    <url-pattern>/menu/usermenu.jsp</url-pattern>
		  </web-resource-collection>
		  <auth-constraint>
		    <role-name>user</role-name>
		  </auth-constraint>
	</security-constraint>
    <session-config>
        <session-timeout>30</session-timeout> 
        <cookie-config>
            <http-only>false</http-only>
        </cookie-config>
    </session-config>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>service.auth.LoginServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>usersignup</servlet-name>
        <servlet-class>service.auth.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usersignup</servlet-name>
        <url-pattern>/auth/user/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>service.auth.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>transaction</servlet-name>
        <servlet-class>service.user.Transaction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>transaction</servlet-name>
        <url-pattern>/user/transaction</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>withdraw</servlet-name>
        <servlet-class>service.user.Withdraw</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdraw</servlet-name>
        <url-pattern>/user/withdraw</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>otp</servlet-name>
        <servlet-class>service.auth.Otp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>otp</servlet-name>
        <url-pattern>/auth/user/otp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>evalauth</servlet-name>
        <servlet-class>service.auth.EvalAuth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>evalauth</servlet-name>
        <url-pattern>/auth/user/secret</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>record</servlet-name>
        <servlet-class>service.record.GenerateRecord</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>record</servlet-name>
        <url-pattern>/record/generate</url-pattern>
    </servlet-mapping>
    <!-- Google Login -->
     <!-- <servlet>
        <servlet-name>googlelogin</servlet-name>
        <servlet-class>service.googleauth.GoogleLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>googlelogin</servlet-name>
        <url-pattern>/login/google</url-pattern>
    </servlet-mapping> -->
    <!-- Admin Signup -->
    <servlet>
        <servlet-name>adminsignup</servlet-name>
        <servlet-class>service.auth.AdminSignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminsignup</servlet-name>
        <url-pattern>/auth/admin/signup</url-pattern>
    </servlet-mapping>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/auth/login.jsp</form-login-page>
        </form-login-config>
    </login-config>
    <security-role>
        <role-name>AccessAllTables</role-name>
        <role-name>user</role-name>
    </security-role>
</web-app>